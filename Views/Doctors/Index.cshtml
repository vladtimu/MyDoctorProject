@model TimuVladProiect.Models.AppointmentViewModel.DoctorIndexData

@{
    ViewData["Title"] = "Doctors";
}

<h1>Doctors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Doctor Name</th>
            <th>Service</th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Doctors)
        {
            string selectedRow = "";
            if (item.ID == (int?)ViewData["DoctorID"])
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>

                <td>
                    @{
                        foreach (var service in item.DoctorServices)
                        {
                            @service.Service.ID @: @service.Service.Name <br />
                        }
                    }
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Services != null)
{
    <h3>Services</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach (var item in Model.Services)
        {
            string selectedRow = "";
            if (item.ID == (int?)ViewData["serviceID"])
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink(" Show Appointments", "Index", new { serviceID = item.ID })
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
    </table>
}
@if (Model.Appointments != null)
{
    <h3>
        Appointments
    </h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th> Date</th>
        </tr>
        @foreach (var item in Model.Appointments)
        {
            <tr>
                <td>
                    @item.User.Name
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProgramare)
                </td>
            </tr>
        }
    </table>
}